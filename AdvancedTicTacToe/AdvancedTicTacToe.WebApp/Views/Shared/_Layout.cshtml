@using Microsoft.AspNet.Identity
@using AdvancedTicTacToe.WebApp.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ApplicationConfig.ApplicationName</title>
    <base href="@Url.Content("~")">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link href='https://fonts.googleapis.com/css?family=Indie+Flower' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto+Slab|Ubuntu+Condensed|Architects+Daughter' rel='stylesheet' type='text/css'>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript">
        window.userIdentity = {
            userName:'@User.GetSafeUserName(Request, Response)',
            isAuthenticated: @User.Identity.IsAuthenticated.ToString().ToLower()
            };
    </script>

</head>
<body id="mainContainer" ng-controller="LoadingRouteController as loadingRouteCtrl">

    @RenderBody()


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angularjs")

    <link href="https://cdnjs.cloudflare.com/ajax/libs/angularjs-toaster/0.4.16/toaster.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angularjs-toaster/0.4.16/toaster.min.js"></script>

    <!--Reference the SignalR library. -->
    @Scripts.Render("~/signalr/library")
    <!--Reference the autogenerated SignalR hub script. -->
    @Scripts.Render("~/signalr/hubs")

    <script type='text/javascript' src="http://cdnjs.cloudflare.com/ajax/libs/knockout/3.1.0/knockout-min.js"></script>
    @Scripts.Render("~/bundles/thegame")
    <script type="text/javascript">
        $(document).ready(function () {

            InitializeGame();

            $.connection.hub.logging = true;

            angular.bootstrap($("#mainContainer"), ['advancedTicTacToe']);
        });

    </script>

    <script type="text/javascript">
        window.AppName = '@Url.Content("~")';
    </script>

</body>
</html>
